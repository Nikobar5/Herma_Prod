{
  "name": "herma",
  "version": "0.0.0",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && vite",
    "dev:electron": "cross-env NODE_ENV=development tsc -p electron/tsconfig.json && electron electron/dist/main.js",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "install-all": "npm install && python3 -m pip install -r python/requirements.txt",
    "lint": "eslint .",
    "clean": "rimraf electron/dist frontend/dist"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "dompurify": "^3.2.4",
    "marked": "^15.0.7",
    "python-shell": "latest",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.13.1",
    "@types/python-shell": "^0.4.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "latest",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "latest",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  },
  "build": {
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
